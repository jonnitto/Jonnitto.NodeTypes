# http://EditorConfig.org

# top-most EditorConfig file
root = true


# Tab; Default
# html, CSS, SCSS, JS, ..,

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing-whitespace = true
indent_style = tab
indent_size = 4

# 4 Space; PSR-2
# Use your IDE Code Style Config too..

[*.{php,json}]
indent_style = space
indent_size = 4


# 2 Spaces

[*.{yaml,yml,sh,jscsrc}]
indent_style = space
indent_size = 2

[.*rc]
indent_style = space
indent_size = 2


# Exceptions

[composer.*]
indent_style = space
indent_size = 4

[Sites.xml]
indent_style = space
indent_size = 1

[*.{note,md,edit,read}]
trim_trailing-whitespace = false
