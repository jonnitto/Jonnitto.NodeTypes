prototype(NT:LinRel) < prototype(Fusion:Value) {
	property = ${property ? property : 'link'}
	rel = 'noopener'

	@context {
		read = ${q(node).property(this.property)}
		rel = ${this.rel}
	}

	value = Fusion:Case {
		@context.linkType = NT:LinkType {
			read = ${read}
		}
		inBackend {
			condition = ${node.context.inBackend}
			renderer = false
			@position = 'start 1'
		}
		isNode {
			condition = ${linkType == 'node'}
			renderer = false
		}
		isHash {
			condition = ${linkType == 'hash'}
			renderer = false
		}
		isExternal {
			condition = ${linkType == 'external'}
			renderer = ${rel}
		}
		default {
			condition = true
			renderer = false
		}
	}
}
