prototype(NT:LinkURI) < prototype(Fusion:Value) {
	property = ${property ? property : 'link'}
	@context.read = ${q(node).property(this.property)}
	value = Fusion:Case {
		@context.linkType = NT:LinkType {
			read = ${read}
		}
		isNode {
			condition = ${linkType == 'node'}
			renderer = NodeUri {
				@context.nodeObject = ${Neos.Link.convertUriToObject(read, node)}
				node = ${q(nodeObject).closest(configJonnittoNodeTypes.instanceOfDocument).get(0)}
				section = ${q(nodeObject).is(configJonnittoNodeTypes.instanceOfDocument) ? false : configJonnittoNodeTypes.prependIdentifier + nodeObject.identifier}
			}
		}
		isAssetOrExternal {
			condition = ${read}
			renderer = ${read}
			renderer.@process.convertUris = ConvertUris
		}
		noLink {
			condition = true
			renderer = false
		}
	}

	@if.isValidLink = NT:ValidLink
}
